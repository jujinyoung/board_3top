<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="education.top.repository.BoardMapper">

    <select id="findAll" resultType="Board">
        SELECT b.*
        FROM (
            SELECT ROWNUM no, t.*
            FROM(
                SELECT * FROM Board
                ORDER BY id DESC
                )t
            )b
        WHERE b.no BETWEEN #{begin} and #{end}
    </select>

    <insert id="write">
        INSERT INTO Board
        VALUES (board_sequence.nextval, #{title}, #{writer}, #{content}, sysdate, 0)
    </insert>

    <select id="findById" resultType="Board">
        SELECT * FROM Board
        WHERE id = #{id}
    </select>

    <delete id="delete">
        DELETE FROM Board WHERE id = #{id}
    </delete>

    <delete id="deleteMulti">
        DELETE FROM Board WHERE id IN
                          <foreach item="ids" index="index" collection="list" open="(" separator="," close=")">
                            #{ids}
                          </foreach>
    </delete>

    <update id="update">
        UPDATE Board SET title = #{title}, content = #{content}
        WHERE id = #{id}
    </update>

    <update id="read">
        UPDATE Board SET readed = readed+1
        WHERE id = #{id}
    </update>

    <select id="getTotalRecords" resultType="Integer">
        SELECT COUNT(*) FROM Board
    </select>
</mapper>